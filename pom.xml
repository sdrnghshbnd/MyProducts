<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.4</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.sederikko</groupId>
    <artifactId>MyProducts</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>MyProducts</name>
    <description>MyProducts</description>
    <properties>
        <java.version>17</java.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-thymeleaf</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <!-- JPackage Plugin Configuration -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>jpackage</executable>
                    <arguments>
                        <argument>--name</argument>
                        <argument>MyProducts</argument>
                        <argument>--input</argument>
                        <argument>${project.build.directory}</argument>
                        <argument>--main-jar</argument>
                        <argument>${project.artifactId}-${project.version}.jar</argument>
                        <argument>--main-class</argument>
                        <argument>com.sederikko.MyProductsApplication</argument> <!-- Change this to your main class -->
                        <argument>--type</argument>
                        <argument>exe</argument>
                        <argument>--jlink-options</argument>
                        <argument>--add-modules</argument>
                        <argument>java.base</argument>
                        <argument>--runtime-image</argument>
                        <argument>${project.build.directory}/jre</argument>
                        <argument>--icon</argument>
                        <argument>src/main/resources/static/logo.png</argument> <!-- Path to your icon -->
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
